<p>Form for creation of new factory</p>
<%if @factorie.errors.any?%>
<% @factorie.errors.full_messages.each do |e|%>
<p><%=e%></p>
<%end%>
<%end%>


<%=form_with scope: :factorie,url:factories_path,local:true do |f| %>
<p>
    <%=f.label:name%><br/>
    <%=f.text_field:name%>
</p>
<p>
    <%=f.label:description%><br/>
    <%=f.text_area:description%>
</p>
<p>
    <%=f.label:location%><br/>
    <%=f.text_field:location%>
</p>
<p>
    <%=f.submit%>
</p>

<%end%>

<%=link_to 'Back',factories_path() %>