<table>
<thead>
<tr>
<td>Title</td>
<td>Descrition</td>
<td>Actions</td>
</tr>
</thead>
<tbody>
<% @articles.each do |article| %>
    <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Show',article_path(article)%></td>
        <td><%= button_to 'Delete',article_path(article),method: :delete %></td>
    </tr>
<% end %>
</tbody>
</table>